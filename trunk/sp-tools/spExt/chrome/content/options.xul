                        <radio id="SPGdbAJAX-options-galaxy-g2de" label="Speed" value="spus" />
                      </vbox>
                    </hbox>
                  </radiogroup>
                </vbox>
              </groupbox>
            </vbox>
          </tabpanel>
        </tabpanels>
      </tabbox>
    </dialog>
