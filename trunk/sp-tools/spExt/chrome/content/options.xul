                  </vbox>
                  <vbox>
                    <caption label="Password:" />
                    <textbox id="SPGdbAJAX-options-password2" multiline="false" maxlength="64" type="password" />
                  </vbox>
                </hbox>
                <vbox>
                  <caption label="" />
                  <caption label="Galaxie:" />
                  <radiogroup id="SPGdbAJAX-options-galaxy-server2">
                    <hbox>
                      <vbox>
                        <radio id="SPGdbAJAX-options-galaxy-g1it" label="G1" value="g1it" />
                        <radio id="SPGdbAJAX-options-galaxy-g2it" label="G2" value="g2it" />
                        <radio id="SPGdbAJAX-options-galaxy-g2de" label="Speed" value="spus" />
                      </vbox>
                    </hbox>
                  </radiogroup>
                </vbox>
              </groupbox>
            </vbox>
          </tabpanel>
          <tabpanel>
            <vbox>
              <groupbox>
                <caption label="Informations sur la Base" />
                <vbox>
                  <caption label="URL de SPGala ( Ex.: http://host.com/SPGala/ ):" />
                  <textbox id="SPGdbAJAX-options-root3" multiline="false" />
