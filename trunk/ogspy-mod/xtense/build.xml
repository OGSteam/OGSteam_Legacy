<project name="Xtense MOD" default="copy" basedir="../..">
  	
	<property name="base.dir" value="C:/DevelMoi/Xtense [MOD]"/>
	<property name="default.dir" value="C:/applis/wamp/www/OGSPY/mod/Xtense"/>
	
	<!-- Nettoyage du repertoire temporaire de ma version -->
	<target name="clean" description="Nettoyage du répertoire">
		<delete dir="${default.dir}" taskname="Suppression du répertoire Xtense"/>
	</target>
		
	<target name="create-ouptut-dirs" description="Création du répertoire temporaire de ma barre" depends="clean">
