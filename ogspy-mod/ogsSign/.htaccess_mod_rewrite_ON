<Files sign*.php>
Allow from all
</Files>

# les règles de réécriture
Options +FollowSymlinks
RewriteEngine on
RewriteRule ^([a-zA-Z0-9_-\s]+)\.?([SPA]?)\.png$ sign.php?player=$1&typesign=$2
